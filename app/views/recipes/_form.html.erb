<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %> <br>

  <%= f.fields_for :ingredients do |i| %>
    <%= i.label :name_1 %>
    <%= i.text_field :name_1 %><br>

    <%= i.label :name_2 %>
    <%= i.text_field :name_2 %><br>

    <%= i.label :quantity %>
    <%= i.text_field :quantity %>
  <% end %>

  <%= f.submit %>
<% end %>
